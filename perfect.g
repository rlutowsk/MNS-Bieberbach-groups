Read("mns.g");

###############################################################################
##
#F MNSPerfectGroupsMaxSize( <max size> )
##
## 
## return id numbers of mns perfect groups
## NOTE: GAP library contains perfect groups up to order 2*10^6
##
MNSPerfectGroupsMaxSize := function(max)
    local sizes, ids, s, i;

    if max>2000000 then
        Error("GAP library contains perfect groups up to order 2â‹…10^6");
    fi;

    sizes := Filtered(SizesPerfectGroups(), i->i<=max);
    ids := [];
    for s in sizes do
        for i in [1..NrPerfectGroups(s)] do
            if IsMinimalNonSolvableGroup(PerfectGroup(s,i)) then
                Add(ids, [s,i]);
            fi;
        od;
    od;
    return ids;
end;

